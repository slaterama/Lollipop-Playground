<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Widget.FloatingActionButton" parent="@android:style/Widget">
		<item name="fabBackgroundColor">@color/fab_light_background</item>
		<!--<item name="cardCornerRadius">@dimen/cardview_default_radius</item>-->
		<item name="fabElevation">@dimen/fab_default_elevation</item>
		<item name="fabMaxElevation">@dimen/fab_default_elevation</item>
		<item name="fabUseCompatPadding">false</item>
		<!--<item name="fabPreventCornerOverlap">true</item>-->
		<item name="android:foreground">?selectableItemBackgroundBorderless</item>
	</style>

	<style name="Widget.FloatingActionButton.Light">
		<item name="fabBackgroundColor">@color/fab_light_background</item>
	</style>

	<style name="Widget.FloatingActionButton.Dark">
		<item name="fabBackgroundColor">@color/fab_dark_background</item>
	</style>

	<style name="Widget.AppBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
		<item name="background">@color/color_primary</item>
	</style>

	<style name="Widget.AppBar.Translucent">
		<item name="background">@color/material_blue_grey_500_translucent</item>
	</style>

	<style name="Widget.AppBar.Transparent">
		<item name="background">@android:color/transparent</item>
	</style>

	<style name="Widget.FloatingActionButtonCompat" parent="@android:style/Widget.ImageButton">
		<item name="fabType">normal</item>
	</style>

	<style name="Widget.CenteredDrawableButton" parent="@android:style/Widget.Button">
		<item name="android:drawablePadding">8dp</item>
	</style>

	<!--
	<style name="Preference.SwitchPreferenceEx" parent="@android:style/Preference.SwitchPreference">
		<item name="checkOnClick">true</item>
	</style>
	-->

	<style name="Widget.FacebookButton" parent="@style/Widget.CenteredDrawableButton">
		<item name="android:textColor">?android:textColorPrimaryInverse</item>
		<item name="android:textStyle">normal</item>
		<item name="android:background">@drawable/btn_facebook_default_holo_light</item>
	</style>

	<style name="Widget.GoogleButton" parent="@style/Widget.CenteredDrawableButton">
		<item name="android:textColor">?android:textColorPrimaryInverse</item>
		<item name="android:textStyle">normal</item>
		<item name="android:background">@drawable/btn_google_default_holo_light</item>
	</style>

	<style name="Widget.CitymapsGreyButton" parent="@style/Widget.CenteredDrawableButton">
		<item name="android:textColor">?android:textColorPrimaryInverse</item>
		<item name="android:textStyle">normal</item>
		<item name="android:background">@drawable/btn_citymaps_grey_default_holo_light</item>
	</style>

	<style name="Widget.Holo.FloatingActionButton" parent="@style/Widget.FloatingActionButton" />

	<style name="Widget.Holo.FloatingActionButton.Light" parent="@style/Widget.FloatingActionButton.Light" />

	<style name="Widget.Holo.FloatingActionButton.Dark" parent="@style/Widget.FloatingActionButton.Dark" />

	<style name="Widget.Holo.FloatingActionButtonCompat" parent="@android:style/Widget.Holo.ImageButton">
		<item name="fabType">normal</item>
	</style>

	<style name="Widget.Holo.CenteredDrawableButton" parent="@android:style/Widget.Holo.Light.Button">
		<item name="android:drawablePadding">8dp</item>
	</style>

	<!--
	<style name="Preference.Holo.SwitchPreferenceEx" parent="@android:style/Preference.Holo.SwitchPreference">
		<item name="checkOnClick">true</item>
	</style>
	-->

	<style name="Widget.Holo.FacebookButton" parent="@style/Widget.Holo.CenteredDrawableButton">
		<item name="android:textColor">?android:textColorPrimaryInverse</item>
		<item name="android:textStyle">normal</item>
		<item name="android:background">@drawable/btn_facebook_default_holo_light</item>
	</style>

	<style name="Widget.Holo.GoogleButton" parent="@style/Widget.Holo.CenteredDrawableButton">
		<item name="android:textColor">?android:textColorPrimaryInverse</item>
		<item name="android:textStyle">normal</item>
		<item name="android:background">@drawable/btn_google_default_holo_light</item>
	</style>

	<style name="Widget.Holo.CitymapsGreyButton" parent="@style/Widget.Holo.CenteredDrawableButton">
		<item name="android:textColor">?android:textColorPrimaryInverse</item>
		<item name="android:textStyle">normal</item>
		<item name="android:background">@drawable/btn_citymaps_grey_default_holo_light</item>
