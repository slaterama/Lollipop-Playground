<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Widget.AppBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
		<item name="background">@drawable/ab_background</item>
	</style>

	<style name="Widget.AppBar.Translucent">
		<item name="background">@color/material_blue_grey_500_translucent</item>
	</style>

	<style name="Widget.AppBar.Transparent">
		<item name="background">@android:color/transparent</item>
	</style>

	<style name="Widget.CenteredDrawableButton" parent="@android:style/Widget.Button">
		<item name="android:drawablePadding">8dp</item>
	</style>

	<style name="Widget.FacebookButton" parent="@style/Widget.CenteredDrawableButton">
		<item name="android:textColor">?android:textColorPrimaryInverse</item>
		<item name="android:textStyle">bold</item>
		<item name="android:background">@drawable/btn_facebook_default_holo_light</item>
	</style>

	<style name="Widget.GoogleButton" parent="@style/Widget.CenteredDrawableButton">
		<item name="android:textColor">?android:textColorPrimaryInverse</item>
		<item name="android:textStyle">bold</item>
		<item name="android:background">@drawable/btn_google_default_holo_light</item>
	</style>

	<style name="Widget.CitymapsGreyButton" parent="@style/Widget.CenteredDrawableButton">
		<item name="android:textColor">?android:textColorPrimaryInverse</item>
		<item name="android:textStyle">bold</item>
		<item name="android:background">@drawable/btn_citymaps_grey_default_holo_light</item>
	</style>

	<style name="Widget.Holo.CenteredDrawableButton" parent="@android:style/Widget.Holo.Light.Button">
		<item name="android:drawablePadding">8dp</item>
	</style>

	<style name="Widget.Holo.FacebookButton" parent="@style/Widget.Holo.CenteredDrawableButton">
		<item name="android:textColor">?android:textColorPrimaryInverse</item>
		<item name="android:textStyle">bold</item>
		<item name="android:background">@drawable/btn_facebook_default_holo_light</item>
	</style>

	<style name="Widget.Holo.GoogleButton" parent="@style/Widget.Holo.CenteredDrawableButton">
		<item name="android:textColor">?android:textColorPrimaryInverse</item>
		<item name="android:textStyle">bold</item>
		<item name="android:background">@drawable/btn_google_default_holo_light</item>
	</style>

	<style name="Widget.Holo.CitymapsGreyButton" parent="@style/Widget.Holo.CenteredDrawableButton">
		<item name="android:textColor">?android:textColorPrimaryInverse</item>
		<item name="android:textStyle">bold</item>
		<item name="android:background">@drawable/btn_citymaps_grey_default_holo_light</item>
	</style>

</resources>