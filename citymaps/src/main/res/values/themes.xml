<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

		<!-- Customize the color palette -->
		<item name="colorPrimary">@color/color_primary</item>
		<item name="colorPrimaryDark">@color/color_primary_dark</item>
		<item name="colorAccent">@color/color_accent</item>
		<item name="colorButtonNormal">@color/color_button_normal</item>

		<item name="floatingActionButtonStyle">@style/Widget.FloatingActionButton.Light</item>
		<item name="floatingActionButtonCompatStyle">@style/Widget.Holo.FloatingActionButtonCompat</item>

		<item name="centeredDrawableButtonStyle">@style/Widget.Holo.CenteredDrawableButton</item>
		<!--<item name="switchPreferenceExStyle">@style/Preference.Holo.SwitchPreferenceEx</item>-->
		<item name="facebookButtonStyle">@style/Widget.Holo.FacebookButton</item>
		<item name="googleButtonStyle">@style/Widget.Holo.GoogleButton</item>
		<item name="citymapsGreyButtonStyle">@style/Widget.Holo.CitymapsGreyButton</item>
	</style>

	<!-- Theme with no title/action/app bar -->

	<style name="AppTheme.NoTitleOrActionBar">
		<item name="android:windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
	</style>

	<style name="AppTheme.NoTitleOrActionBar.FullScreen">
		<item name="android:windowFullscreen">true</item>
	</style>

	<!-- Base application theme with translucent app bar -->
	<!-- Inspired by "Pushing the ActionBar to the Next Level" by Cyril Mottier,
	     http://cyrilmottier.com/2013/05/24/pushing-the-actionbar-to-the-next-level/ -->

	<style name="AppTheme.TranslucentAppBar">
		<item name="actionBarStyle">@style/Widget.AppBar.Translucent</item>
	</style>

	<!-- Base application theme with overlay -->

	<style name="AppTheme.Overlay">
		<item name="windowActionBarOverlay">true</item>
	</style>

	<!-- Base application theme with translucent app bar and overlay -->

	<style name="AppTheme.TranslucentAppBar.Overlay">
		<item name="windowActionBarOverlay">true</item>
	</style>

</resources>
