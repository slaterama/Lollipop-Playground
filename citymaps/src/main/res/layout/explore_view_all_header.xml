<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/explore_view_all_header"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

	<com.citymaps.mobile.android.widget.RatioFrameLayout
			android:id="@+id/explore_view_all_header_placeholder"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:ratio="@dimen/default_header_ratio" />

	<Button
			android:id="@+id/explore_view_all_header_filter_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="@string/view_all_filter_everything"/>

</LinearLayout>