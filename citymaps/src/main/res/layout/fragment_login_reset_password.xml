<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:paddingLeft="@dimen/activity_horizontal_margin"
			  android:paddingRight="@dimen/activity_horizontal_margin"
			  android:paddingTop="@dimen/activity_vertical_margin"
			  android:paddingBottom="@dimen/activity_vertical_margin"
			  android:orientation="vertical"
			  android:gravity="center_horizontal"
			  tools:context="com.citymaps.mobile.android.view.housekeeping.LoginResetPasswordFragment">

	<EditText
			android:id="@+id/login_reset_password_email_address"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="textEmailAddress"
			android:hint="@string/login_reset_password_email_address_hint"
			tools:ignore="TextFields" />

	<EditText
			android:id="@+id/login_reset_password_confirm_email"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="textEmailAddress"
			android:imeOptions="actionGo"
			android:hint="@string/login_reset_password_confirm_email_hint"
			tools:ignore="TextFields"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/component_baseline_grid"
			android:layout_marginLeft="@dimen/activity_horizontal_margin"
			android:layout_marginStart="@dimen/activity_horizontal_margin"
			android:layout_marginRight="@dimen/activity_horizontal_margin"
			android:layout_marginEnd="@dimen/activity_horizontal_margin"
			android:gravity="center_horizontal"
			android:text="@string/login_reset_password_instructions" />

</LinearLayout>
